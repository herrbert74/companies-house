<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@id/companies_flow"
	app:startDestination="@id/mainFragment">

	<fragment
		android:id="@+id/mainFragment"
		android:name="com.babestudios.companyinfouk.companies.ui.main.MainFragment"
		android:label="MainFragment"
		tools:layout="@layout/fragment_main">

		<action
			android:id="@+id/action_mainFragment_to_companyFragment"
			app:destination="@id/companyFragment"
			app:enterAnim="@anim/right_slide_in"
			app:exitAnim="@anim/left_slide_out"
			app:popEnterAnim="@anim/left_slide_in"
			app:popExitAnim="@anim/right_slide_out" />

		<action
			android:id="@+id/action_mainFragment_to_companyFragment_pop"
			app:popUpTo="@id/mainFragment"
			app:popUpToInclusive="true"
			app:destination="@id/companyFragment" />

		<action
			android:id="@+id/action_mainFragment_to_mapFragment_pop"
			app:popUpTo="@id/mainFragment"
			app:popUpToInclusive="true"
			app:destination="@id/mapFragment" />

		<action
			android:id="@+id/action_mainFragment_to_favouritesFragment"
			app:destination="@+id/favouritesFragment"
			app:enterAnim="@anim/right_slide_in"
			app:exitAnim="@anim/left_slide_out"
			app:popEnterAnim="@anim/left_slide_in"
			app:popExitAnim="@anim/right_slide_out" />

		<action
			android:id="@+id/action_mainFragment_to_privacyFragment"
			app:destination="@id/privacyFragment"
			app:enterAnim="@anim/right_slide_in"
			app:exitAnim="@anim/left_slide_out"
			app:popEnterAnim="@anim/left_slide_in"
			app:popExitAnim="@anim/right_slide_out" />
	</fragment>

	<fragment
		android:id="@+id/companyFragment"
		android:name="com.babestudios.companyinfouk.companies.ui.company.CompanyFragment"
		android:label="CompanyFragment"
		tools:layout="@layout/fragment_company">
		<argument
			android:defaultValue=""
			android:name="number"
			app:argType="string" />
		<argument
			android:defaultValue=""
			android:name="name"
			app:argType="string" />

		<deepLink
			android:id="@+id/deepLink"
			app:uri="companyinfo://company?number={number}&amp;name={name}" />
		<action
			android:id="@+id/action_companyFragment_to_mapFragment"
			app:destination="@id/mapFragment"
			app:enterAnim="@anim/right_slide_in"
			app:exitAnim="@anim/left_slide_out"
			app:popEnterAnim="@anim/left_slide_in"
			app:popExitAnim="@anim/right_slide_out" />
	</fragment>

	<fragment
		android:id="@+id/favouritesFragment"
		android:name="com.babestudios.companyinfouk.companies.ui.favourites.FavouritesFragment"
		android:label="FavouritesFragment"
		tools:layout="@layout/fragment_favourites">
		<action
			android:id="@+id/actionToCompany"
			app:destination="@id/companyFragment"
			app:enterAnim="@anim/right_slide_in"
			app:exitAnim="@anim/left_slide_out"
			app:popEnterAnim="@anim/left_slide_in"
			app:popExitAnim="@anim/right_slide_out" />
	</fragment>

	<fragment
		android:id="@+id/mapFragment"
		android:name="com.babestudios.companyinfouk.companies.ui.map.MapFragment"
		android:label="MapFragment"
		tools:layout="@layout/fragment_map">
		<argument
			android:defaultValue=""
			android:name="name"
			app:argType="string" />
		<argument
			android:defaultValue=""
			android:name="address"
			app:argType="string" />

		<deepLink
			android:id="@+id/deepLink"
			app:uri="companyinfo://map?name={name}&amp;address={address}" />
	</fragment>

	<fragment
		android:id="@+id/privacyFragment"
		android:name="com.babestudios.companyinfouk.companies.ui.privacy.PrivacyFragment"
		android:label="PrivacyFragment">
	</fragment>

</navigation>