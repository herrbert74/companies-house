<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/charges.xml"
	app:startDestination="@id/searchFragment">

	<fragment
		android:id="@+id/mainFragment"
		android:name="com.babestudios.companyinfouk.companies.ui.main.MainFragment"
		android:label="MainFragment"
		tools:layout="@layout/fragment_main">

		<action
			android:id="@+id/action_chargesFragment_to_chargesDetailsFragment"
			app:destination="@id/insolvencyDetailsFragment"
			app:enterAnim="@anim/right_slide_in"
			app:exitAnim="@anim/left_slide_out"
			app:popEnterAnim="@anim/left_slide_in"
			app:popExitAnim="@anim/right_slide_out" />
	</fragment>

	<fragment
		android:id="@+id/chargesDetailsFragment"
		android:name="com.babestudios.companyinfouk.charges.ui.details.ChargeDetailsFragment"
		android:label="ChargesDetailsFragment"
		tools:layout="@layout/fragment_charge_details">
	</fragment>

</navigation>