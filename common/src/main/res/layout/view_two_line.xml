<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	tools:layout_width="match_parent"
	tools:layout_height="wrap_content"
	tools:gravity="center_vertical"
	tools:orientation="vertical"
	tools:paddingBottom="@dimen/viewMargin"
	tools:ignore="UseCompoundDrawables"
	tools:parentTag="android.widget.LinearLayout">

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/lblTwoLineViewFirstLine"
		style="@style/Text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="start"
		android:layout_weight="1"
		android:maxLines="1"
		android:transitionName="companyName"
		app:autoSizeMinTextSize="@dimen/textSizeCaption"
		app:autoSizeTextType="uniform"
		tools:text="Nature of business" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/lblTwoLineViewSecondLine"
		style="@style/Text.H6"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:ellipsize="end"
		android:gravity="center_vertical"
		android:maxLines="2"
		app:autoSizeMinTextSize="@dimen/textSizeCaption"
		app:autoSizeTextType="uniform"
		tools:text="77120 Renting and leasing of trucks and other heavy vehicles" />
</merge>
