<resources>

	<style name="ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
		<item name="hintTextAppearance">@style/HintTextAppearance</item>
		<item name="errorTextAppearance">@style/ErrorTextAppearance</item>
		<item name="android:textColorHint">@color/semiTransparentGrey</item>
	</style>

	<style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<item name="hintTextAppearance">@style/HintTextAppearance</item>
		<item name="errorTextAppearance">@style/ErrorTextAppearance</item>
		<item name="android:textColorHint">@color/semiTransparentGrey</item>
		<item name="android:editTextStyle">@style/EditText</item>
	</style>

	<style name="EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
		<item name="android:layout_marginTop">@dimen/view_margin_small</item>
		<item name="android:paddingTop">@dimen/view_margin_small</item>
		<item name="android:textSize">@dimen/textSizeBody1</item>
		<item name="android:textColor">@color/colorOnSurface</item>
		<item name="android:maxLines">1</item>
		<item name="android:paddingBottom">2dp</item>
	</style>

	<style name="HintTextAppearance" parent="TextAppearance.AppCompat">
		<item name="android:textColor">@color/colorPrimary</item>
	</style>

	<style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
		<item name="android:textColor">@color/colorError</item>
	</style>

	<!-- Buttons -->

	<style name="Button" parent="Widget.MaterialComponents.Button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">@dimen/button_height</item>
		<item name="materialThemeOverlay">@style/ButtonStyleTextColor</item>
		<item name="cornerRadius">@dimen/button_corner_radius</item>
	</style>

	<style name="ButtonStyleTextColor">
		<item name="colorOnPrimary">@android:color/white</item>
	</style>

	<style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
		<item name="android:textSize">@dimen/textSubtitle1</item>
	</style>

	<style name="Button.Link" parent="Widget.MaterialComponents.Button.TextButton">
		<item name="android:textSize">@dimen/textSizeCaption</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<!-- Cards -->

	<style name="Card" parent="Widget.MaterialComponents.CardView">
		<item name="cardElevation">@dimen/view_margin_small</item>
		<item name="cardUseCompatPadding">true</item>
		<item name="android:layout_marginTop">@dimen/view_margin_small</item>
		<item name="android:layout_marginStart">@dimen/view_margin_small</item>
		<item name="android:layout_marginEnd">@dimen/view_margin_small</item>
	</style>

	<!-- Chips -->

	<style name="Chip" parent="Base.Widget.MaterialComponents.Chip">
		<item name="chipBackgroundColor">@color/selector_chips</item>
		<item name="chipIconTint">@android:color/white</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="chipCornerRadius">@dimen/view_margin</item>
	</style>

	<style name="Chip.Action">
		<item name="closeIconVisible">false</item>
	</style>

	<style name="Chip.Filter">
		<item name="android:checkable">true</item>
		<item name="closeIconVisible">false</item>
	</style>

	<!-- Others -->

	<style name="DatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar" />

	<style name="Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
		<item name="android:background">?colorPrimary</item>
		<item name="android:textColorPrimary">@android:color/white</item>
	</style>
</resources>










