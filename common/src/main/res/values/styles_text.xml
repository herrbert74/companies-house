		<item name="android:layout_marginTop">@dimen/text_margin</item>
		<item name="android:layout_marginStart">@dimen/view_margin</item>
		<item name="android:layout_marginEnd">@dimen/view_margin</item>
		<item name="android:textColor">@color/colorOnSurface</item>
		<item name="android:textSize">@dimen/textSizeBody1</item>
