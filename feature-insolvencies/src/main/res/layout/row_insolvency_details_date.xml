<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
												   xmlns:app="http://schemas.android.com/apk/res-auto"
												   xmlns:tools="http://schemas.android.com/tools"
												   android:layout_width="match_parent"
												   android:layout_height="wrap_content"
												   android:paddingBottom="@dimen/screenMargin">

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guideline"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.6"/>

	<TextView
		android:id="@+id/cpnInsolvencyDetailsDate"
		style="@style/Text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/screenMargin"
		android:layout_marginTop="@dimen/screenMargin"
		android:text="@string/date"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<TextView
		android:id="@+id/lblInsolvencyDetailsDate"
		style="@style/Text.Bold"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/screenMargin"
		app:layout_constraintBaseline_toBaselineOf="@+id/cpnInsolvencyDetailsDate"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintLeft_toLeftOf="@+id/guideline"
		app:layout_constraintRight_toRightOf="parent"
		tools:text="Long text here 1"/>

	<TextView
		android:id="@+id/cpnInsolvencyDetailsType"
		style="@style/Text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/screenMargin"
		android:layout_marginTop="@dimen/screenMargin"
		android:text="@string/type"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/cpnInsolvencyDetailsDate"/>

	<TextView
		android:id="@+id/lblInsolvencyDetailsType"
		style="@style/Text.Bold"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/screenMargin"
		app:layout_constraintBaseline_toBaselineOf="@+id/cpnInsolvencyDetailsType"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintLeft_toLeftOf="@+id/guideline"
		app:layout_constraintRight_toRightOf="parent"
		tools:text="Long text here 2"/>

</androidx.constraintlayout.widget.ConstraintLayout>
