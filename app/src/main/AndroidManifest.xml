<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.babestudios.companieshouse">

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:name=".CompaniesHouseApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme.NoActionBar">
		<activity
			android:name=".ui.search.SearchActivity"
			android:windowSoftInputMode="stateHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".ui.company.CompanyActivity"/>
		<activity
			android:name=".ui.favourites.FavouritesActivity"
			android:label="@string/favourites"/>
		<activity android:name=".ui.filinghistory.FilingHistoryActivity"/>
		<activity android:name=".ui.filinghistorydetails.FilingHistoryDetailsActivity"/>
		<activity android:name=".ui.charges.ChargesActivity"/>
		<activity android:name=".ui.insolvency.InsolvencyActivity"/>
		<activity android:name=".ui.insolvencydetails.InsolvencyDetailsActivity"/>
		<activity android:name=".ui.chargesdetails.ChargesDetailsActivity"/>
		<activity android:name=".ui.officers.OfficersActivity"/>
		<activity android:name=".ui.officerdetails.OfficerDetailsActivity"/>
		<activity android:name=".ui.persons.PersonsActivity"/>
		<activity android:name=".ui.personsdetails.PersonsDetailsActivity"/>
	</application>

</manifest>