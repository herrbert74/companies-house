<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
												 xmlns:app="http://schemas.android.com/apk/res-auto"
												 xmlns:tools="http://schemas.android.com/tools"
												 android:layout_width="match_parent"
												 android:layout_height="match_parent"
												 android:fitsSystemWindows="true"
												 tools:context="com.babestudios.companyinfouk.ui.company.CompanyActivity">

	<com.babestudios.base.view.ParallaxAppBarView
		android:id="@+id/pabCompany"
		android:layout_width="match_parent"
		android:layout_height="@dimen/appbar_height"
		android:theme="@style/AppTheme.AppBarOverlay"
		app:imageViewSrc="@drawable/bg_company"/>

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/fabCompanyFavorite"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|end"
		android:layout_margin="@dimen/fab_margin"
		app:srcCompat="@drawable/ic_favorite"/>

	<com.babestudios.base.view.MultiStateView
		android:id="@+id/msvCompany"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
		app:msv_emptyView="@layout/multi_state_view_empty"
		app:msv_errorView="@layout/multi_state_view_error"
		app:msv_loadingView="@layout/multi_state_view_progress"
		app:msv_viewState="content">

		<android.support.v4.widget.NestedScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/appbar"
			app:layout_behavior="@string/appbar_scrolling_view_behavior">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<ProgressBar
					android:id="@+id/progressbar"
					android:layout_width="100dp"
					android:layout_height="100dp"
					android:layout_gravity="center"
					android:indeterminate="true"
					android:indeterminateBehavior="cycle"
					android:visibility="gone"/>

				<TextView
					android:id="@+id/tvCompanyNumber"
					style="@style/Text"
					android:layout_marginBottom="@dimen/view_margin_small"
					android:transitionName="companyNumber"
					tools:text="08762819"/>

				<include
					layout="@layout/divider"/>

				<TextView
					android:id="@+id/tvCompanyIncorporated"
					style="@style/Text"
					android:layout_marginTop="@dimen/view_margin_small"
					android:layout_marginBottom="@dimen/view_margin_small"
					tools:text="Incorporated on 2016 August 3"/>

				<include
					layout="@layout/divider"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<TextView
						style="@style/Text.Title"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:text="@string/office_address"/>

					<Button
						android:id="@+id/buttonShowOnMap"
						style="@style/ButtonPrimary"

						android:layout_marginTop="16dp"
						android:layout_marginEnd="@dimen/activity_horizontal_margin"
						android:text="@string/company_address_show_on_map"/>

				</LinearLayout>

				<TextView
					android:id="@+id/tvCompanyAddressLine1"
					style="@style/Text"
					tools:text="3 Hendon Place"/>

				<TextView
					android:id="@+id/tvCompanyAddressLine2"
					style="@style/Text"
					android:visibility="gone"/>

				<TextView
					android:id="@+id/tvCompanyAddressLocality"
					style="@style/Text"
					tools:text="Kingston"/>

				<TextView
					android:id="@+id/tvCompanyAddressPostalCode"
					style="@style/Text"
					android:layout_marginBottom="@dimen/view_margin_small"
					tools:text="KT6 2LP"/>

				<include
					layout="@layout/divider"/>

				<TextView
					style="@style/Text.Title"
					android:text="@string/company_nature_of_business"/>

				<TextView
					android:id="@+id/tvCompanyNatureOfBusiness"
					style="@style/Text"
					android:layout_marginBottom="@dimen/view_margin_small"
					tools:text="Growing of rice"/>

				<include
					layout="@layout/divider"/>

				<TextView
					style="@style/Text.Title"
					android:text="@string/company_accounts"/>

				<TextView
					android:id="@+id/tvCompanyAccounts"
					style="@style/Text"
					android:layout_marginBottom="@dimen/view_margin_small"
					tools:text="Last DORMANT account made up to 29 February 2016"/>

				<include
					layout="@layout/divider"/>

				<TextView
					style="@style/Text.Title"
					android:text="@string/company_annual_returns"/>

				<TextView
					android:id="@+id/tvCompanyAnnualReturns"
					style="@style/Text"
					android:layout_marginBottom="@dimen/view_margin_small"
					tools:text="Last made up to 13 February 2016"/>

				<include
					layout="@layout/divider"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:onClick="onFilingHistoryClicked">

					<ImageView
						android:layout_width="@dimen/icon_size"
						android:layout_height="@dimen/icon_size"
						android:layout_margin="@dimen/view_margin"
						app:srcCompat="@drawable/ic_company_filing_history"/>

					<TextView
						style="@style/Text"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="@dimen/view_margin"
						android:text="@string/filing_history"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/llCompanyInsolvency"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:onClick="onInsolvencyClicked">

					<ImageView
						android:layout_width="@dimen/icon_size"
						android:layout_height="@dimen/icon_size"
						android:layout_margin="@dimen/view_margin"
						app:srcCompat="@drawable/ic_company_insolvency"/>

					<TextView
						style="@style/Text"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="@dimen/view_margin"
						android:text="@string/insolvency"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/llCompanyCharges"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:onClick="onChargesClicked">

					<ImageView
						android:layout_width="@dimen/icon_size"
						android:layout_height="@dimen/icon_size"
						android:layout_margin="@dimen/view_margin"
						app:srcCompat="@drawable/ic_company_charges"/>

					<TextView
						style="@style/Text"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="@dimen/view_margin"
						android:text="@string/charges"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:onClick="onOfficersClicked">

					<ImageView
						android:layout_width="@dimen/icon_size"
						android:layout_height="@dimen/icon_size"
						android:layout_margin="@dimen/view_margin"
						app:srcCompat="@drawable/ic_company_officers"/>

					<TextView
						style="@style/Text"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="@dimen/view_margin"
						android:text="@string/officers"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:onClick="onPersonsClicked">

					<ImageView
						android:layout_width="@dimen/icon_size"
						android:layout_height="@dimen/icon_size"
						android:layout_margin="@dimen/view_margin"
						app:srcCompat="@drawable/ic_company_persons_with_control"/>

					<TextView
						style="@style/Text"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="@dimen/view_margin"
						android:text="@string/persons_with_significant_control"/>
				</LinearLayout>
			</LinearLayout>
		</android.support.v4.widget.NestedScrollView>
	</com.babestudios.base.view.MultiStateView>
</android.support.design.widget.CoordinatorLayout>