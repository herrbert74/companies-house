<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:fitsSystemWindows="true"
			  android:orientation="vertical"
			  tools:context=".ui.company.CompanyActivity">

	<android.support.design.widget.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay"/>

	</android.support.design.widget.AppBarLayout>

	<ProgressBar
		android:id="@+id/progressbar"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_gravity="center"
		android:indeterminate="true"
		android:indeterminateBehavior="cycle"
		android:visibility="gone"/>

	<TextView
		android:id="@+id/tv_incorporated"
		style="@style/Text"
		android:layout_marginBottom="@dimen/view_margin_small"
		android:layout_marginTop="@dimen/view_margin_small"
		tools:text="Incorporated on 2016 August 3"/>

	<include

		layout="@layout/divider"/>

	<TextView
		style="@style/Text.Title"
		android:text="@string/company_number"/>

	<TextView
		android:id="@+id/tv_company_number"
		style="@style/Text"
		android:layout_marginBottom="@dimen/view_margin_small"
		tools:text="08762819"/>

	<include
		layout="@layout/divider"/>

	<TextView
		style="@style/Text.Title"
		android:text="@string/office_address"/>

	<TextView
		android:id="@+id/tv_address_line_1"
		style="@style/Text"
		tools:text="3 Hendon Place"/>

	<TextView
		android:id="@+id/tv_address_line_2"
		style="@style/Text"
		android:visibility="gone"/>

	<TextView
		android:id="@+id/tv_address_locality"
		style="@style/Text"
		tools:text="Kingston"/>

	<TextView
		android:id="@+id/tv_address_postal_code"
		style="@style/Text"
		android:layout_marginBottom="@dimen/view_margin_small"
		tools:text="KT6 2LP"/>

	<include
		layout="@layout/divider"/>
</LinearLayout>
