<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@id/filingsFlow"
	app:startDestination="@id/filingsFragment">

	<fragment
		android:id="@+id/filingsFragment"
		android:name="com.babestudios.companyinfouk.filings.ui.filinghistory.FilingHistoryFragment"
		android:label="FilingsFragment"
		tools:layout="@layout/fragment_filing_history">

		<argument
			android:name="selectedCompanyId"
			app:argType="string" />

		<action
			android:id="@+id/actionToDetails"
			app:destination="@id/filingDetailsFragment"
			app:enterAnim="@anim/right_slide_in"
			app:exitAnim="@anim/left_slide_out"
			app:popEnterAnim="@anim/left_slide_in"
			app:popExitAnim="@anim/right_slide_out" />
	</fragment>

	<fragment
		android:id="@+id/filingDetailsFragment"
		android:name="com.babestudios.companyinfouk.filings.ui.details.FilingHistoryDetailsFragment"
		android:label="FilingDetailsFragment"
		tools:layout="@layout/fragment_filing_history_details">

		<argument
			android:name="selectedCompanyId"
			app:argType="string" />

		<argument
			android:name="selectedFilingsItem"
			app:argType="com.babestudios.companyinfouk.domain.model.filinghistory.FilingHistoryItem" />

	</fragment>

</navigation>