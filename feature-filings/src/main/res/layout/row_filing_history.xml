<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView
		android:id="@+id/lblFilingHistoryDate"
		style="@style/Text.Bold"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_gravity="start"
		android:maxLines="1"
		app:autoSizeMinTextSize="6sp"
		app:autoSizeTextType="uniform"
		app:layout_constraintEnd_toStartOf="@id/lblFilingHistoryCategory"
		app:layout_constraintBottom_toTopOf="@+id/lblFilingHistoryDescription"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="2016-01-31" />

	<TextView
		android:id="@+id/lblFilingHistoryCategory"
		style="@style/Text"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:gravity="bottom|end"
		android:maxLines="1"
		app:autoSizeMinTextSize="6sp"
		app:autoSizeTextType="uniform"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/lblFilingHistoryDate"
		app:layout_constraintBottom_toBottomOf="@id/lblFilingHistoryDate"
		tools:text="confirmation statement" />

	<TextView
		android:id="@+id/lblFilingHistoryDescription"
		style="@style/Text"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:maxLines="3"
		app:autoSizeTextType="uniform"
		app:layout_constraintBottom_toTopOf="@+id/lblFilingHistoryType"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/lblFilingHistoryDate"
		tools:text="Termination of appointment of Abdul Gafoor Kannathody Kunjumuihhamed as a director on 2020-04-02" />

	<TextView
		android:id="@id/lblFilingHistoryType"
		style="@style/Text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="start"
		android:layout_marginBottom="@dimen/viewMargin"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/lblFilingHistoryDescription"
		tools:text="AA" />

</androidx.constraintlayout.widget.ConstraintLayout>
