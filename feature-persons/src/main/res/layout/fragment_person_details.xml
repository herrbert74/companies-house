<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
													 xmlns:app="http://schemas.android.com/apk/res-auto"
													 xmlns:tools="http://schemas.android.com/tools"
													 android:layout_width="match_parent"
													 android:layout_height="match_parent"
													 android:fitsSystemWindows="true"
													 tools:context=".ui.details.PersonDetailsFragment">

	<com.babestudios.base.view.ParallaxAppBarView
		android:id="@+id/pabPersonDetails"
		android:layout_width="match_parent"
		android:layout_height="@dimen/appbar_height"
		android:theme="@style/AppTheme.AppBarOverlay"
		app:imageViewSrc="@drawable/bg_persons"/>

	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/activity_vertical_margin"
			android:layout_marginTop="@dimen/activity_vertical_margin">

			<androidx.constraintlayout.widget.Guideline
				android:id="@+id/guideline"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				app:layout_constraintGuide_begin="@dimen/constraint_guide_begin"/>

			<TextView
				android:id="@+id/cpnPersonDetailsName"
				style="@style/Text"
				app:layout_constraintTop_toTopOf="parent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_marginTop="@dimen/activity_vertical_margin"
				android:text="@string/officer_details_name"
				app:layout_constraintLeft_toLeftOf="parent"/>

			<TextView
				android:id="@+id/lblPersonDetailsName"
				style="@style/Text.H6"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginEnd="@dimen/activity_horizontal_margin"
				app:layout_constraintBaseline_toBaselineOf="@+id/cpnPersonDetailsName"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintLeft_toLeftOf="@+id/guideline"
				app:layout_constraintRight_toRightOf="parent"
				tools:text="PATEL, Ashish Nalin"/>

			<TextView
				android:id="@+id/cpnPersonDetailsNotifiedOn"
				style="@style/Text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_marginTop="@dimen/activity_vertical_margin"
				android:text="@string/person_details_notified_on"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsName"/>

			<TextView
				android:id="@+id/lblPersonDetailsNotifiedOn"
				style="@style/Text.H6"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginEnd="@dimen/activity_horizontal_margin"
				app:layout_constraintBaseline_toBaselineOf="@+id/cpnPersonDetailsNotifiedOn"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintLeft_toLeftOf="@+id/guideline"
				app:layout_constraintRight_toRightOf="parent"
				tools:text="2011-08-11"/>

			<TextView
				android:id="@+id/cpnPersonDetailsNaturesOfControl"
				style="@style/Text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_marginTop="@dimen/activity_vertical_margin"
				android:text="@string/person_details_natures_of_control"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsNotifiedOn"/>

			<TextView
				android:id="@+id/lblPersonDetailsNaturesOfControl"
				style="@style/Text.H6"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginEnd="@dimen/activity_horizontal_margin"
				app:layout_constraintBaseline_toBaselineOf="@+id/cpnPersonDetailsNaturesOfControl"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintLeft_toLeftOf="@+id/guideline"
				app:layout_constraintRight_toRightOf="parent"
				tools:text="ownership-of-shares-50-to-75-percent-as-firm"/>

			<TextView
				android:id="@+id/cpnPersonDetailsNationality"
				style="@style/Text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_marginTop="@dimen/activity_vertical_margin"
				android:text="@string/officer_details_nationality"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsNaturesOfControl"/>

			<TextView
				android:id="@+id/lblPersonDetailsNationality"
				style="@style/Text.H6"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginEnd="@dimen/activity_horizontal_margin"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintLeft_toLeftOf="@+id/guideline"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsNaturesOfControl"
				tools:text="British"/>

			<TextView
				android:id="@+id/cpnPersonDetailsDateOfBirth"
				style="@style/Text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_marginTop="@dimen/activity_horizontal_margin"
				android:text="@string/officer_details_date_of_birth"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsNationality"/>

			<TextView
				android:id="@+id/lblPersonDetailsDateOfBirth"
				style="@style/Text.H6"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginEnd="@dimen/activity_horizontal_margin"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintLeft_toLeftOf="@+id/guideline"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsNationality"
				tools:text="25/1980"/>

			<TextView
				android:id="@+id/cpnPersonDetailsCountryOfResidence"
				style="@style/Text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_marginTop="@dimen/activity_horizontal_margin"
				android:text="@string/officer_details_country_of_residence"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsDateOfBirth"/>

			<TextView
				android:id="@+id/lblPersonDetailsCountryOfResidence"
				style="@style/Text.H6"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginEnd="@dimen/activity_horizontal_margin"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintLeft_toLeftOf="@+id/guideline"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsDateOfBirth"
				tools:text="United Kingdom"/>

			<TextView
				android:id="@+id/cpnPersonDetailsPlaceRegistered"
				style="@style/Text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_marginTop="@dimen/activity_vertical_margin"
				android:text="@string/person_details_place_registered"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsCountryOfResidence"/>

			<TextView
				android:id="@+id/lblPersonDetailsPlaceRegistered"
				style="@style/Text.H6"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginEnd="@dimen/activity_horizontal_margin"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintLeft_toLeftOf="@+id/guideline"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsCountryOfResidence"
				tools:text="Wales"/>

			<TextView
				android:id="@+id/cpnPersonDetailsRegistrationNumber"
				style="@style/Text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_marginTop="@dimen/activity_horizontal_margin"
				android:text="@string/person_details_registration_number"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsPlaceRegistered"/>

			<TextView
				android:id="@+id/lblPersonDetailsRegistrationNumber"
				style="@style/Text.H6"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginEnd="@dimen/activity_horizontal_margin"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintLeft_toLeftOf="@+id/guideline"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsPlaceRegistered"
				tools:text="25/1980"/>

			<TextView
				android:id="@+id/cpnPersonDetailsAddress"
				style="@style/Text.Bold"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_marginTop="@dimen/activity_vertical_margin"
				android:paddingStart="@dimen/activity_horizontal_margin"
				android:text="@string/insolvency_details_address"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsRegistrationNumber"
				tools:ignore="RtlSymmetry"/>

			<TextView
				android:id="@+id/lblPersonDetailsAddress"
				style="@style/Text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_marginTop="@dimen/activity_horizontal_margin"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/cpnPersonDetailsAddress"
				tools:text="14 Sample Street"/>

			<TextView
				android:id="@+id/lblPersonDetailsLocality"
				style="@style/Text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_marginTop="@dimen/activity_horizontal_margin"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsAddress"
				tools:text="Windsor"/>

			<TextView
				android:id="@+id/lblPersonDetailsPostalCode"
				style="@style/Text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_marginTop="@dimen/activity_horizontal_margin"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsLocality"
				tools:text="AA14 1AA"/>

			<TextView
				android:id="@+id/lblPersonDetailsRegion"
				style="@style/Text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_marginTop="@dimen/activity_horizontal_margin"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsPostalCode"
				tools:text="Surrey"/>

			<TextView
				android:id="@+id/lblPersonDetailsCountry"
				style="@style/Text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_marginTop="@dimen/activity_horizontal_margin"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/lblPersonDetailsRegion"
				tools:text="United Kingdom"/>

		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>